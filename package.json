{
  "name": "proxilabs-bot",
  "version": "1.0.0",
  "description": "A slack bot for ProxiLabs as secretary",
  "main": "index.js",
  "scripts": {
    "setup": "npm i && node setup.js",
    "build": "rimraf dist/ && mkdir dist && cp ./src/* dist/ && cp ./scripts/* dist/ && cp package.json dist/",
    "start": "nodemon --watch src src/index.js",
    "test": "jasmine --config=./jasmine.json"
  },
  "keywords": [
    "slack",
    "bot",
    "firebase"
  ],
  "author": "Arnaud Foraison <a.foraison@proxiad.com>",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.2",
    "botkit": "^0.6.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "firebase": "^4.5.0",
    "request-promise-native": "^1.0.4"
  },
  "devDependencies": {
    "eslint": "^4.0.0",
    "jasmine": "^2.8.0",
    "nodemon": "^1.11.0"
  }
}
